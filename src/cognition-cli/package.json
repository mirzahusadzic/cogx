{
  "name": "cognition-cli",
  "version": "2.6.2",
  "type": "module",
  "license": "AGPL-3.0-or-later",
  "author": "Mirza Husadzic",
  "engines": {
    "node": ">=22.0.0"
  },
  "bin": {
    "cognition-cli": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && node build-worker.js",
    "build:worker": "node build-worker.js",
    "dev": "tsx watch src/cli.ts",
    "dev:tui": "tsx src/cli.ts tui",
    "start": "node dist/cli.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:api": "typedoc",
    "docs:api:serve": "npx http-server docs/api -p 3001 -o",
    "test": "npm run test:main && sleep 3 && npm run test:workerpool",
    "test:main": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --config vitest.config.ts",
    "test:workerpool": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --config vitest.workerpool.config.ts",
    "test:watch": "vitest",
    "test:commands": "npm run build && node dist/scripts/test-commands.js",
    "lint": "eslint 'src/**/*.{ts,tsx}' && markdownlint . --ignore node_modules",
    "lint:changed": "git diff --name-only --diff-filter=ACMR HEAD | sed 's|^src/cognition-cli/||' | xargs -r sh -c 'ts_files=$(echo \"$@\" | tr \" \" \"\\n\" | grep -E \"^src/.*\\.(ts|tsx)$\" | tr \"\\n\" \" \"); md_files=$(echo \"$@\" | tr \" \" \"\\n\" | grep \"\\.md$\" | tr \"\\n\" \" \"); [ -n \"$ts_files\" ] && eslint $ts_files; [ -n \"$md_files\" ] && markdownlint $md_files; true' sh",
    "lint:staged": "git diff --name-only --cached --diff-filter=ACMR | sed 's|^src/cognition-cli/||' | xargs -r sh -c 'ts_files=$(echo \"$@\" | tr \" \" \"\\n\" | grep -E \"^src/.*\\.(ts|tsx)$\" | tr \"\\n\" \" \"); md_files=$(echo \"$@\" | tr \" \" \"\\n\" | grep \"\\.md$\" | tr \"\\n\" \" \"); [ -n \"$ts_files\" ] && eslint $ts_files; [ -n \"$md_files\" ] && markdownlint $md_files; true' sh",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:changed": "git diff --name-only --diff-filter=ACMR HEAD | sed 's|^src/cognition-cli/||' | grep -E '\\.(ts|tsx|js|json|md)$' | xargs -r prettier --write",
    "format:staged": "git diff --name-only --cached --diff-filter=ACMR | sed 's|^src/cognition-cli/||' | grep -E '\\.(ts|tsx|js|json|md)$' | xargs -r prettier --write"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.69.0",
    "@clack/prompts": "^0.7.0",
    "@google-cloud/storage": "^7.17.1",
    "@google/adk": "^0.2.1",
    "@google/genai": "^1.14.0",
    "@inkjs/ui": "^2.0.0",
    "@lancedb/lancedb": "^0.22.3",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@openai/agents": "^0.3.6",
    "@opentelemetry/api": "^1.9.0",
    "@types/chokidar": "^1.7.5",
    "@types/workerpool": "^6.4.7",
    "apache-arrow": "^18.1.0",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "commander": "^12.0.0",
    "diff": "^8.0.2",
    "dotenv": "^16.4.0",
    "esbuild": "^0.25.12",
    "execa": "^8.0.1",
    "fastest-levenshtein": "^1.0.16",
    "form-data": "^4.0.0",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "ink": "^6.5.0",
    "ink-text-input": "^6.0.0",
    "js-yaml": "^4.1.1",
    "node-pty": "^1.0.0",
    "proper-lockfile": "^4.1.2",
    "react": "^19.2.0",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "undici": "^7.16.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "upath": "^2.0.1",
    "workerpool": "^10.0.0",
    "yaml": "^2.8.1",
    "zeromq": "^6.5.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/diff": "^7.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "happy-dom": "^20.0.10",
    "markdownlint-cli": "^0.45.0",
    "memfs": "^4.9.3",
    "prettier": "^3.3.2",
    "tsx": "^4.7.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitepress": "^1.2.3",
    "vitest": "^1.6.0"
  }
}
